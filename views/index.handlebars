<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto mb-3 mt-3">
      <img class="burger"src="assets/img/burger.png" />
      <h1>EAT-DA-BURGER!</h1>
    </div>
  </div>

  
 
    <div class="row m-3">
      <div class="col-md-6">
        {{#each burgers}}
        {{#unless devoured}}
        {{!-- <form action="burgers/eaten/{{id}}" method="POST"> --}}
        <div class="input-group">
          <li class="form-control">{{id}}: {{burger_name}}</li>
          <span class="input-group-btn">
            <button class="btn btn-dark devour-btn devour " data-id="{{id}} " type="submit" data-toggle="button" aria-pressed="false">Devour!</button>
          </span>
        </div>
        {{!-- </form> --}}
        {{/unless}}
        {{/each}}
      </div>
      <div class="col-md-6">
        {{#each burgers}}
        {{#if devoured}}
        {{!-- <form action="burgers/eaten/{{id}}" method="PUT"> --}}
          <div class="input-group">
            <li class="form-control">{{id}}: {{burger_name}}</li>
            <span class="input-group-btn">
              <button class="btn btn-danger delete" data-id="{{id}}" data-toggle="button" aria-pressed="false" type="submit">Delete!</button>
            </span>
          </div>
        {{!-- </form> --}}
        {{/if}}
        {{/each}}
      </div>

    </div>
  
  <div class="row">
    <form class="create-form mx-auto">
      <div class="form-group text-center">
        <label for="burgerInput">Place your order!</label>
        <input type="text" class="form-control" id="burgerInput">
      </div>
      <button type="submit" class="btn btn-dark mx-auto w-100" data-toggle="button" aria-pressed="false">Submit</button>
    </form>
  </div>

</div>